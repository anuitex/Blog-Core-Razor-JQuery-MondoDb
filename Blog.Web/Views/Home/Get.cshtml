@model Blog.ViewModels.Home.AllPosts.PostHomeView

@{
	ViewData["Title"] = "Get";
}

<h2>@Model.Title</h2>

<div id="modal" class="ddd">
	<div id="card" class="card" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">@Model.Title</h5>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label for="exampleFormControlInput1">#Tag</label>
					<span name="Tag" class="form-control" id="inTag">@Model.Tag</span>
					<label for="exampleFormControlInput1">Title</label>
					<div name="Title" class="form-control" id="inTitle">@Model.Title</div>
				</div>
				<div class="form-group">
					<label for="exampleFormControlTextarea1">Text</label>
					<p class="card-text" id="inText">@Model.Text</p>
				</div>
			</div>
		</div>
	</div><br>
	@foreach (var comment in Model.Comment)
	{
		<div class="card">
			<div class="card-header">
				<h5 class="card-title">@comment.Name</h5>
			</div>
			<div class="card-body">
				<p class="card-text">@comment.Text</p>
			</div>
		</div><br>
	}
</div>
